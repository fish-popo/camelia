{
  "private": true,
  "scripts": {
    "build": "pnpm run -C ./build start",
    "update:version": "tsx ./scripts/update-version.ts",
    "clean-node_modules": "rimraf -rf node_modules",
    "lint": "eslint \"{packages,build,scripts,docs}/**/*.{ts,tsx,js,md}\"",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "dependencies": {
    "@camellia/components": "workspace:*",
    "@camellia/core": "workspace:*",
    "@camellia/hooks": "workspace:*",
    "@camellia/shared": "workspace:*"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.2.1",
    "@pnpm/types": "^8.4.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^20.4.10",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.47.0",
    "eslint-plugin-jsonc": "^2.3.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "lint-staged": "^15.1.0",
    "lodash": "^4.17.21",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.6.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.1.6",
    "react-dom": "18.3.1",
    "react": "18.3.1"
  },
  "engines": {
    "node": ">= 18"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md}": "eslint --fix"
  }
}
